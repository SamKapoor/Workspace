<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/row_tv_ReciptNo"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="" />

    <ImageView
        android:id="@+id/row_iv_Print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_tv_ReciptNo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/row_tv_ReciptNo"
        android:background="@color/color_lightblue"
        android:src="@drawable/ic_action_print"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/row_tv_customer_name"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_iv_Print"
        android:padding="3dp"
        android:text="Customer Name" />

    <TextView
        android:id="@+id/row_tv_date"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/row_iv_Print"
        android:padding="3dp"
        android:text="Date" />

    <TextView
        android:id="@+id/row_tv_Calculation"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_tv_date"
        android:padding="3dp"
        android:text="Date" />

    <TextView
        android:id="@+id/row_tv_PaidAmt"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_tv_Calculation"
        android:padding="3dp"
        android:text="Date" />

</RelativeLayout>